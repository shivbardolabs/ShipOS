# ===========================================================================
# ShipOS — Environment Variables
# ===========================================================================
# Copy this file to .env and fill in the values for your environment.
#
#   cp .env.example .env
#
# Never commit .env to version control.
# ===========================================================================

# ---------------------------------------------------------------------------
# Database — Vercel Postgres (Neon)
# ---------------------------------------------------------------------------
# These are auto-injected by Vercel when you connect a Postgres store.
# For local dev, copy the values from Vercel → Storage → your DB → .env.local tab.
POSTGRES_PRISMA_URL="postgresql://user:password@host:5432/shipos?pgbouncer=true&connect_timeout=15&sslmode=require"
POSTGRES_URL_NON_POOLING="postgresql://user:password@host:5432/shipos?sslmode=require"

# ---------------------------------------------------------------------------
# Authentication (Auth0)
# ---------------------------------------------------------------------------
AUTH0_SECRET="generate-a-secure-random-string"
AUTH0_BASE_URL="http://localhost:3000"
AUTH0_ISSUER_BASE_URL="https://your-tenant.us.auth0.com"
AUTH0_CLIENT_ID=""
AUTH0_CLIENT_SECRET=""

# ---------------------------------------------------------------------------
# Email — Resend (https://resend.com)
# ---------------------------------------------------------------------------
# Create an API key at https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxx"
# From address — must use a verified domain in Resend
RESEND_FROM_EMAIL="ShipOS Pro <notifications@shipospro.com>"

# ---------------------------------------------------------------------------
# SMS — Twilio (https://twilio.com)
# ---------------------------------------------------------------------------
# Account SID & Auth Token from https://console.twilio.com
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
# A Twilio phone number with SMS capability
TWILIO_PHONE_NUMBER="+1XXXXXXXXXX"
# Optional: Messaging Service SID (recommended for better deliverability)
# TWILIO_MESSAGING_SERVICE_SID="MGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# ---------------------------------------------------------------------------
# File Storage — AWS S3
# ---------------------------------------------------------------------------
S3_BUCKET="shipos-uploads"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""

# ---------------------------------------------------------------------------
# Google Maps — Address Autocomplete
# ---------------------------------------------------------------------------
# Used for address autocomplete on customer forms (New Customer, Edit Customer).
# Get a key at https://console.cloud.google.com/apis/credentials
# Enable "Places API" and "Maps JavaScript API" for the key.
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=""

# ---------------------------------------------------------------------------
# Application
# ---------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# ---------------------------------------------------------------------------
# Analytics — PostHog (https://posthog.com)
# ---------------------------------------------------------------------------
# Project API key (starts with phc_) — safe to expose client-side
NEXT_PUBLIC_POSTHOG_KEY=""
# PostHog ingest host — US: https://us.i.posthog.com  EU: https://eu.i.posthog.com
NEXT_PUBLIC_POSTHOG_HOST="https://us.i.posthog.com"
